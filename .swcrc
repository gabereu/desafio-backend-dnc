{
    "jsc": {
      "parser": {
        "syntax": "typescript",
        "decorators": true
      },
      "transform": {
        "legacyDecorator": true,
        "decoratorMetadata": true
      },
      "baseUrl": ".",
      "paths": {
        "@domain/*": ["./src/main/domain/*"],
        "@application/*": ["./src/main/application/*"],
        "@infra/*": ["./src/main/infra/*"],
        "@shared/*": ["./src/main/shared/*"],
        "@tests/*": ["./src/tests/*"]
      }
    },
    "module": {
      "type": "commonjs"
    },
    "env": {
      "targets": {
        "node": 16
      }
    }
  }